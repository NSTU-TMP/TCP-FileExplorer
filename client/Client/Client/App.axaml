<Application    x:Class="Client.App"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:local="using:Client">    <Application.DataTemplates>        <local:ViewLocator />    </Application.DataTemplates>    <Application.Styles>        <FluentTheme Mode="Light" />        <Style Selector="ListBoxItem">            <Setter Property="Padding" Value="5" />            <Setter Property="Margin" Value="2" />            <Setter Property="CornerRadius" Value="5" />        </Style>        <Style Selector="ComboBoxItem">            <Setter Property="CornerRadius" Value="5" />            <Setter Property="Margin" Value="2" />            <Setter Property="Padding" Value="5" />        </Style>        <Style Selector="ListBox.HorizontalScroll">            <Setter Property="Template">                <ControlTemplate>                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" />                </ControlTemplate>            </Setter>        </Style>        <Style Selector="ComboBox">            <Setter Property="HorizontalContentAlignment" Value="Center" />        </Style>    </Application.Styles></Application>