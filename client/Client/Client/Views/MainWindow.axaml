<Window    x:Class="Client.Views.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:Client.ViewModels"    Title="Client"    Width="930"    Height="630"    MaxWidth="930"    MaxHeight="630"    d:DesignHeight="450"    d:DesignWidth="800"    CanResize="False"    Icon="/Assets/avalonia-logo.ico"    mc:Ignorable="d">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid>        <StackPanel Orientation="Horizontal" Spacing="100">            <StackPanel                Margin="10,10,0,0"                Orientation="Vertical"                Spacing="10">                <ComboBox                    Width="400"                    Height="30"                    Padding="5"                    HorizontalAlignment="Center"                    CornerRadius="10"                    Items="{Binding ComboBoxItems}"                    SelectedIndex="{Binding SelectedIndexComboBox}" />                <ListBox                    Width="400"                    Height="450"                    Padding="10"                    HorizontalAlignment="Center"                    AutoScrollToSelectedItem="True"                    BorderBrush="Black"                    BorderThickness="1"                    CornerRadius="10"                    Items="{Binding ListBoxItems}"                    SelectedIndex="{Binding SelectedIndexListBox}" />                <StackPanel                    HorizontalAlignment="Center"                    Orientation="Horizontal"                    Spacing="5">                    <TextBlock VerticalAlignment="Center">IP-адрес:</TextBlock>                    <TextBox                        Width="150"                        CornerRadius="10"                        Text="{Binding IpAddress}"                        Watermark="IP" />                </StackPanel>                <StackPanel                    HorizontalAlignment="Center"                    Orientation="Horizontal"                    Spacing="5">                    <Button Command="{Binding SendMessageToServer}" CornerRadius="10">Передать серверу</Button>                    <Button Command="{Binding ConnectToServer}" CornerRadius="10">Соединиться с сервером</Button>                </StackPanel>                <StackPanel                    HorizontalAlignment="Center"                    Orientation="Horizontal"                    Spacing="5">                    <Button Command="{Binding ShutOffServer}" CornerRadius="10">Отключить сервер</Button>                    <Button Command="{Binding DisconnectFromServer}" CornerRadius="10">Отключиться от сервера</Button>                </StackPanel>            </StackPanel>            <StackPanel                Margin="10,10,0,0"                Orientation="Vertical"                Spacing="10">                <TextBlock Height="30" HorizontalAlignment="Center">                    Сообщения от сервера                </TextBlock>                <Border                    Width="400"                    Height="450"                    BorderBrush="Black"                    BorderThickness="1"                    CornerRadius="10">                    <TextBlock                        Width="400"                        Height="450"                        Padding="10"                        Text="{Binding MessageFromServer}" />                </Border>            </StackPanel>        </StackPanel>    </Grid></Window>