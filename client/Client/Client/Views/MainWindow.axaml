<Window    x:Class="Client.Views.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:Client.ViewModels"    Title="Client"    Width="1000"    Height="700"    d:DesignHeight="450"    d:DesignWidth="800"    Icon="/Assets/avalonia-logo.ico"    mc:Ignorable="d">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid>        <StackPanel Orientation="Horizontal" Spacing="100">            <StackPanel                Margin="10,10,0,0"                Orientation="Vertical"                Spacing="10">                <ComboBox HorizontalAlignment="Center" />                <ListBox                    Width="400"                    Height="450"                    HorizontalAlignment="Center" />                <StackPanel Orientation="Horizontal" Spacing="5">                    <TextBlock VerticalAlignment="Center">IP-адрес:</TextBlock>                    <TextBox                        Width="150"                        Text="{Binding ipAddress}"                        Watermark="IP" />                    <Button Command="{Binding ConnectToServer}">Соединиться с сервером</Button>                </StackPanel>                <Button Command="{Binding ShutOffServer}">Отключить сервер</Button>                <StackPanel Orientation="Horizontal" Spacing="5">                    <Button Command="{Binding SendMessageToServer}">Передать серверу</Button>                    <Button Command="{Binding DisconnectFromServer}">Отключиться от сервера</Button>                </StackPanel>            </StackPanel>            <StackPanel                Margin="10,10,0,0"                Orientation="Vertical"                Spacing="10">                <TextBlock HorizontalAlignment="Center">Сообщения от сервера</TextBlock>                <TextBlock                    Width="400"                    Height="450"                    Text="{Binding messageFromServer}" />            </StackPanel>        </StackPanel>    </Grid></Window>